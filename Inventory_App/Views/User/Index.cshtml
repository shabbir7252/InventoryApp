@model Inventory_App.Models.User

@{
    ViewBag.Title = "Add User";
}

<style>
    .panel {
        margin-top: 50px;
    }

        .panel .panel-body {
            margin: 3% 0;
        }
</style>

<div id="page-wrapper">
    @{
        if (ViewBag.Userexist != null)
        {

            <div class="alert alert-warning alert-dismissible animated bounceIn" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>Warning!</strong> @ViewBag.Userexist.
            </div>

        }
    }

    <div class="panel panel-info">
        <div class="panel-heading">
            <h1>Add Users</h1>
        </div>
        <div class="panel-body">

            <div class="row">

                <div class="col-lg-2 col-lg-offset-3">
                    <label style="margin-top:5px">Search Username: </label>
                </div>
                <div class="col-lg-3">
                    @Html.TextBox("Text1", null, new { @id = "txtSearchemployee", @class = "form-control" })
                </div>
                <div class="col-lg-2">
                    <input class="btn btn-danger" type="submit" id="submitId" value="Search" onclick="location.href='@Url.Action("SearchEmployee", "User")?text=' + encodeURIComponent(document.getElementById('txtSearchemployee').value);" />
                </div>
            </div>

            <div class="row">
                @if (ViewData["nameList"] != null)
                {
                    using (Html.BeginForm("addUser", "User", FormMethod.Post))
                    {
                        <hr />
                        <div class="animated pulse">
                            <div class="col-lg-3 col-lg-offset-3">
                                <label>Employee Username</label>
                                @Html.DropDownList("nameList", null, "Select Employee...", new { @class = "form-control" })
                            </div>

                            <div class="col-lg-2" style="margin-top:20px">
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBox("checkadmin", false) Is Admin
                                    </label>
                                </div>
                            </div>

                            <div class="col-lg-1" style="margin-top:20px">
                                <input type="submit" class="btn btn-default" value="Add User" />
                            </div>
                        </div>
                    }
                }
            </div>

            <hr />

            <div style="padding:0 5%;">
                @{Html.RenderAction("_UserList", "User");}
            </div>

        </div>
    </div>
</div>
